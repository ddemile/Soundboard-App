{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Soundboard",
    "version": "1.1.4"
  },
  "tauri": {
    "allowlist": {
      "globalShortcut": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APPCACHE/*",
          "$APPCONFIG/*",
          "$APPCONFIG"
        ]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.ddemile.soundboard",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": ""
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://raw.githubusercontent.com/ddemile/Soundboard-App/main/src-tauri/updater.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDczOEY2MTgwRjE1NEVFRjkKUldUNTdsVHhnR0dQYzhUaTdRN2psUTQ4cEhzRGFCbG9qcTJzNlg5UzN3alBIQmN4dzVVekF0NjIK",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Soundboard Audio & Groove-Ready Output Module (v1.1.4)",
        "width": 800,
        "fileDropEnabled": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "title": "Soundboard"
    }
  }
}